---
import type { CollectionEntry } from "astro:content";
import PostCard from "./PostCard.astro";

export interface Props{
    posts: CollectionEntry<'posts'>[]
}

const { posts } = Astro.props;

---

<ul class="flex flex-col gap-4  w-full lg:w-3/4">
    {
        posts.map((post) => (
            <li class="w-full">
                <PostCard {...post}/>    
            </li>
        ))
    }
</ul>